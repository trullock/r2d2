			</fieldset>
		</form>
		<form action="/speak" method="post">
			<fieldset>
				<legend>Speak</legend>
				<button name="message" value="happy">Happy</button>
				<button name="message" value="beep">Beep</button>
				<button name="message" value="angry">Alert</button>
				<button name="message" value="chirp">Chirp</button>
				<button name="message" value="chatter">Chatter</button>
				<button name="message" value="sad">Sad</button>
				<button name="message" value="whistle">Whistle</button>
				<button name="message" value="scream">Scream </button>
			</fieldset>
		</form>
				<form action="/behave" method="post">
			<fieldset>
				<legend>Behave</legend>
				
				<button name="mood" value="celebrate">Celebrate</button>
				<button name="mood" value="complain">Complain</button>
				<button name="mood" value="quip">Quip</button>
			</fieldset>
		</form>
		<form action="/volume" method="post">
			<fieldset>
				<legend>Volume</legend>
				<input name="volume" type="range" min="0" max="100" step="5" value="{{volume}}" />
			</fieldset>
		</form>
		<script src="jquery-3.1.2-pre-custom.js"></script>
		<script>
			
			function submitForm($form){
				$.ajax({
					url     : $form.attr('action'),
					type    : $form.attr('method'),
					dataType: 'json',
					data    : $form.serialize(),
				});
			}
		
			$(function(){
				
				$('input:radio').change(function(){
					var $form = $(this).closest('form');
					submitForm($form);
				});

				$('input[type=range]').change(function(){
					var $form = $(this).closest('form');
					submitForm($form);
				});
				
				$('button').click(function(e){
					e.preventDefault();
					
					var $this = $(this);
					var data = {};
					data[$this.attr('name')] = $this.val();
					
					var $form = $this.closest('form');
					
					$.ajax({
						url     : $form.attr('action'),
						type    : $form.attr('method'),
						dataType: 'json',
						data    : data
					});
				});
				
			});
		</script>
	</body>
</html>
